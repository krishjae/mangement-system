  <body>
    <header>
      <h1>Assign Assignment</h1>
    </header>
    <main>
      <section>
        <h2>Assign Assignment Topic</h2>
        <br>
        <form id="assignForm">
          <label for="semester">Select Semester:</label>
          <select id="semester" name="semester" required>
            <option value="semester1">Semester 1</option>
            <option value="semester2">Semester 2</option>
            <option value="semester3">Semester 3</option>
            <option value="semester4">Semester 4</option>
            <option value="semester5">Semester 5</option>
            <option value="semester6">Semester 6</option>
          </select>
          <label for="subject">Select Subject:</label>
          <select id="subject" name="subject" required>
            <% for(item in user.Subjects) {%>
              <option value="<%=user.Subjects[item]%>">
                <%=user.Subjects[item]%>
              </option>
              <% } %>
          </select>
          <br>
          <label for="assignmentTopic">Assignment Topic:</label>
          <input type="text" id="assignmentTopic" name="assignmentTopic" required>
          <br>
          <input type="submit" value="Assign">
        </form>
      </section>
    </main>
  </body>
  <script>
    document.getElementById('assignForm').addEventListener('submit', function (event) {
      event.preventDefault();
      const assignment = document.getElementById('assignmentTopic').value;
      const sem = document.getElementById('semester').value;
      const sub = document.getElementById('subject').value;
      const formData = { "title": assignment, "semester": sem, "subject": sub };

      fetch('/api/teacher/addassignment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      })
        .then(response => response.json())
        .then(data => alert(data.message))
        .catch((error) => {
          console.error('Error:', error);
        });
    });
  </script>

