      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.2s ease-in-out;
    }

    input[type="submit"]:hover {
      background-color: #0277bd;
    }

    /* Style for table rows and cells */
    tbody tr {
      border: 1px solid #ccc;
      transition: transform 0.2s ease-in-out;
    }

    tbody tr:hover {
      transform: scale(1.02);
    }

    /* Style the "View" button similar to "Choose File" button */
    a.view-button {
      background-color: #039be5;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      font-size: 16px;
      text-decoration: none;
      cursor: pointer;
      transition: background-color 0.2s ease-in-out;
      display: inline-block;
      overflow: hidden;
      position: relative;
    }

    a.view-button::after {
      content: 'View';
      display: block;
      position: relative;
      z-index: 2;
    }

    a.view-button::before {
      content: '';
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #0277bd;
      transform: scaleX(0);
      transform-origin: 0 50%;
      z-index: 1;
      transition: transform 0.2s ease-in-out;
    }

    a.view-button:hover::before {
      transform: scaleX(1);
    }
  </style>
