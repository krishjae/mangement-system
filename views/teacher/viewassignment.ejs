    <header>
      <h1>View Assignments</h1>
    </header>
    <main>
      <section>
        <h2>Uploaded Assignments</h2>
        <br>
        <form id="viewassignform">
          <label for="subject">Select Subject:</label>
          <select id="subject" name="subject" required>
            <option value="" selected>Select a Subject</option>
            <% for(item in user.Subjects) {%>
              <option value="<%=user.Subjects[item]%>">
                <%=user.Subjects[item]%>
              </option>
              <% } %>
          </select>
        </form>
        <div class="display-info" id="assi-name">Assignment Topic: --</div>
        <table id="table-assignment" style="display: none;">
          <thead>
            <tr>
              <th>SNo</th>
              <th>Student Name</th>
              <th>View Assignment</th>
            </tr>
          </thead>
          <tbody id="tablebody">
            <!-- Sample data, replace with actual data -->
            <tr>
              <td>1</td>
              <td>John Doe</td>
              <td><a href="uploaded_assignment_1.pdf" target="_blank">View</a></td>
            </tr>
            <tr>
              <td>2</td>
              <td>Jane Smith</td>
              <td><a href="uploaded_assignment_2.pdf" target="_blank">View</a></td>
            </tr>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </section>
    </main>
    <script>
      document.getElementById('subject').onchange = (async (e) => {
        const sub = e.target.value;
        let displayInfoElement = document.getElementById('assi-name');
        if (sub) {
          await fetch('/api/student/getassignmenttopic', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ subject: sub }) }).then(e => e.json()).then(data => {
            if (data.status == 200) {
              displayInfoElement.innerHTML = 'Assignment Topic: ' + data.topics.Assignment;
              document.getElementById('table-assignment').style.display = 'block';
              LoadAssignments(sub);
            } else {
              displayInfoElement.innerHTML = "No topics found";
              document.getElementById('table-assignment').style.display = 'none';
            }
          })
        }
      })
      async function LoadAssignments(subject) {
        const tbody = document.getElementById('tablebody');
        tbody.innerHTML = ''
        await fetch('/api/teacher/listassignment?subject=' + subject, {
          method: 'GET', headers: {
            'Content-Type': 'application/json'
          }
        }).then(e => e.json()).then(data => {
          if (data.status != 200) {
            tbody.innerHTML = '<tr><td colspan="3">No students uploaded</td></tr>'
          } else {
            data = data.data;
            for (let i = 0; i < data.length; i++) {
              let row = `
              <tr>
                <td>${i + 1}</td>
                <td>${data[i].Student}</td>
                <td><a href="/cdn/assignment/${data[i].File}" target="_blank">View</a></td>
              </tr>`;
              tbody.innerHTML += row;
            }
          }
        })
      }
    </script>
