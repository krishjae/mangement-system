  <body>
    <div class="header">
      <h1>Upload Notes</h1>
    </div>
    <div class="container">
      <div class="note-card">
        <div class="note-title">Sample Note Title</div>


        <!-- Add semester dropdown and file upload input -->
        <form id="noteupload" enctype="multipart/form-data">
          <label for="semester">Select Semester:</label>
          <select id="semester" name="semester" required>
            <option value="Semester 1">Semester 1</option>
            <option value="Semester 2">Semester 2</option>
            <option value="Semester 3">Semester 3</option>
            <option value="Semester 4">Semester 4</option>
            <option value="Semester 5">Semester 5</option>
            <option value="Semester 6">Semester 6</option>
            <!-- Add more semester options as needed -->
          </select>
          <label for="subject">Select Subject:</label>
          <select id="subject" name="subject" required>
            <% for(item in user.Subjects) {%>
              <option value="<%=user.Subjects[item]%>">
                <%=user.Subjects[item]%>
              </option>
              <% } %>
          </select>

          <br>
          <label for="file">Upload PDF:</label>
          <input type="file" id="file" name="file" accept=".pdf" required>
          <br>
          <button class="add-note-button" type="submit">Add Note</button>
        </form>
      </div>
      <!-- Add more note cards here -->
      <script>
        document.getElementById('noteupload').addEventListener('submit', function (event) {
          event.preventDefault();
          const file = document.getElementById('file').files[0];
          const sem = document.getElementById('semester').value;
          const sub = document.getElementById('subject').value;
          const formdata = new FormData();
          formdata.append("file", file);
          formdata.append("semester", sem);
          formdata.append("subject", sub);

          var xhr = new XMLHttpRequest();
          xhr.open('POST', '/api/teacher/uploadnote', true);
          xhr.onload = function () {
            if (this.status == 200) {
              alert(JSON.parse(this.response).message);
            }
          };
          xhr.send(formdata);
        });
      </script>
    </div>
