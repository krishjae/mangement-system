  <script>
    document.getElementById('addteacherform').onsubmit = async (e) => {
      e.preventDefault()
      const formdata = {};
      const selectedSubjects = [];
      document.querySelectorAll('.subject-group').forEach(subjectGroup => {
        const radioButtons = subjectGroup.querySelectorAll('input[type="radio"]');
        for (const radioButton of radioButtons) {
          if (radioButton.checked) {
            selectedSubjects.push(radioButton.value);
            break;
          }
        }
      });
      formdata.Name = document.getElementById('teacherName').value;
      formdata.Password = document.getElementById('teacherPassword').value;
      formdata.Email = document.getElementById('teacherEmail').value;
      formdata.Department = document.getElementById('teacherDepartment').value;
      formdata.ClassTeacher = document.getElementById('isClassTeacher').checked;
      formdata.ClassDuty = document.getElementById('teacherSemester').value;
      formdata.Subjects = selectedSubjects;


      let __options = { method: 'POST', headers: { 'Content-Type': 'application/json;charset=utf-8' }, body: JSON.stringify(formdata) };
      await fetch('/api/admin/addteacher', __options).then(e => e.json()).then(data => {
        alert(data.message);
        e.target.reset();
      })
    }

  </script>
