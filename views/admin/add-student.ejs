  </section>
  <!-- footer section -->

  <script type="text/javascript" src="<%process.cwd()%>/../js/jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="<%process.cwd()%>/../js/bootstrap.js"></script>
  <script>
    document.getElementById('addstudent').onsubmit = async (e) => {
      e.preventDefault()
      const studentName = document.getElementById('studentName');
      const studentEmail = document.getElementById('studentEmail');
      const password = document.getElementById('password');
      const department = document.getElementById('department');
      const phoneNumber = document.getElementById('phoneNumber');
      const semester = document.getElementById('semester');
      let __options = { method: 'POST', headers: { 'Content-Type': 'application/json;charset=utf-8' }, body: JSON.stringify({"Name":studentName.value, "Password":password.value, "Email":studentEmail.value, "Department":department.value, "PhoneNumber":phoneNumber.value, "Semester":semester.value}) };
      await fetch('/api/admin/addstudent', __options).then(e => e.json()).then(data => {
        alert(data.message);
        e.target.reset();
      })
    }

  </script>
