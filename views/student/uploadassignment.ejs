  <body>

    <header>
      <h1>Upload Assignment</h1>
    </header>
    <main>
      <section>
        <h2>Upload Assignment</h2>
        <br>
        <!-- Display subject and assignment topic -->
        <label for="subject">Select Subject:</label>
        <select id="subject" name="subject" required>
          <option value="" selected>Select a Subject</option>
          <% for(item in Subjects) {%>
            <option value="<%=Subjects[item]%>">
              <%=Subjects[item]%>
            </option>
            <% } %>
        </select>
        <div class="display-info" id="assi-name">Assignment Topic: --</div>
        <br>
        <form id="assignmentform" enctype="multipart/form-data">
          <label for="assignmentFile">Upload Assignment File:</label>
          <input type="file" id="assignmentFile" disabled name="assignmentFile" accept=".pdf" required>
          <br>
          <input disabled id="submitbtn" type="submit" value="Upload">
        </form>
      </section>
    </main>
    <script>
      let _AssignmentTopic = null;
      document.getElementById('subject').onchange = (async (e) => {
        const sub = e.target.value;
        let displayInfoElement = document.getElementById('assi-name');
        if (sub) {
          await fetch('/api/student/getassignmenttopic', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ subject: sub }) }).then(e => e.json()).then(data => {
            if (data.status == 200) {
              displayInfoElement.innerHTML = 'Assignment Topic: ' + data.topics.Assignment;
              _AssignmentTopic = data.topics.Assignment;
              document.getElementById('assignmentFile').removeAttribute('disabled');
              document.getElementById('submitbtn').removeAttribute('disabled');
            } else {
              displayInfoElement.innerHTML = "No topics found";
              document.getElementById('assignmentFile').disabled = 'disabled';
              document.getElementById('submitbtn').disabled = 'disabled';
            }
          })
        }
      })
      document.getElementById('assignmentform').addEventListener('submit', function (event) {
        event.preventDefault();
        const file = document.getElementById('assignmentFile').files[0];
        const sub = document.getElementById('subject').value;
        const formdata = new FormData();
        formdata.append("file", file);
        formdata.append("topic", _AssignmentTopic);
        formdata.append("subject", sub);

        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/api/student/uploadassignment', true);
        xhr.onload = function () {
            alert(JSON.parse(this.response).message);
        };
        xhr.send(formdata);
      });
    </script>
